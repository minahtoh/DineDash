<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintStart_toStartOf="parent"
    android:padding="7dp"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardBackgroundColor="@color/md_theme_dark_onSecondaryContainer"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp" />
            <com.example.dinedash.utils.DineDashTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:id="@+id/product_name"
                app:layout_constraintStart_toEndOf="@id/product_image"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:text="Mens wear 20102"/>
            <com.example.dinedash.utils.DineDashTextView
                android:layout_width="wrap_content"
                android:id="@+id/product_price"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/product_name"
                app:layout_constraintStart_toStartOf="@+id/product_name"
                android:text="450999"/>
            <com.example.dinedash.utils.DineDashTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@+id/product_price"
                app:layout_constraintTop_toBottomOf="@+id/product_price"
                android:text="5 units left"
                />
            <ImageView
                android:id="@+id/delete_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@id/product_image"
                app:layout_constraintStart_toStartOf="@id/product_image"
                android:src="@drawable/baseline_delete_outline_24"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <com.example.dinedash.utils.DineDashTextView
                android:id="@+id/delete_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REMOVE"
                app:layout_constraintStart_toEndOf="@+id/delete_icon"
                app:layout_constraintTop_toTopOf="@+id/delete_icon"
                app:layout_constraintBottom_toBottomOf="@+id/delete_icon"
                android:textColor="@color/md_theme_dark_onTertiary"/>

            <com.example.dinedash.utils.DineDashTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/product_price"
                app:layout_constraintStart_toStartOf="@+id/product_price"
                android:layout_marginTop="60dp"
                app:layout_constraintBottom_toTopOf="@id/add_button"
                android:text="DINE DASHeXPRESS"
                android:textColor="@color/md_theme_dark_onSecondaryContainer"
                android:textStyle="italic"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:id="@+id/appName"/>

            <ImageButton
                android:id="@+id/add_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_add_24"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@+id/appName"
                android:background="@color/md_theme_dark_onTertiaryContainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <com.example.dinedash.utils.DineDashTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/quantity_number"
                app:layout_constraintStart_toEndOf="@id/remove_button"
                app:layout_constraintEnd_toStartOf="@id/add_button"
                app:layout_constraintTop_toTopOf="@id/add_button"
                app:layout_constraintBottom_toBottomOf="@id/add_button"
                android:text="1"/>
            <ImageButton
                android:id="@+id/remove_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@+id/add_button"
                app:layout_constraintEnd_toStartOf="@+id/add_button"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/baseline_remove_24"
                android:background="@color/md_theme_dark_onTertiaryContainer"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>